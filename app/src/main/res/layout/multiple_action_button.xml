<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:tint="@color/white"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_more" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonTask"
            style="@style/floating_action_button_invisible"
            android:contentDescription="@string/add_new_task"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButtonAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_add_task" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonEvent"
            style="@style/floating_action_button_invisible"
            android:contentDescription="@string/add_new_event"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButtonTask"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_add_calendar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
